<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dis_12"
        android:layout_marginTop="@dimen/dis_15"
        android:textColor="@color/color_b1"
        android:textSize="@dimen/dis_16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/re_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.taijielan.cookbook.base.u.PicassoImageView
            android:id="@+id/iv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dis_12"
            android:layout_marginRight="@dimen/dis_12"
            android:layout_marginTop="@dimen/dis_6"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dis_6">

        <TextView
            android:id="@+id/tv_smell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis_12"
            android:layout_marginTop="@dimen/dis_6"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/dis_14sp" />

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_smell"
            android:layout_below="@+id/tv_smell"

            android:layout_marginTop="@dimen/dis_6"
            android:textColor="@color/color_b7"
            android:textSize="@dimen/dis_12sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dis_12"
            android:layout_marginTop="@dimen/dis_6"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/dis_12sp" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_step"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dis_12"
            android:layout_marginTop="@dimen/dis_4"
            android:textColor="@color/color_b3"

            android:textSize="@dimen/dis_12sp" />

    </RelativeLayout>

</LinearLayout>