<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_banner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dis_20"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/dis_14sp"
        android:layout_marginLeft="@dimen/dis_20"
        android:background="@drawable/selector_background_convenience_banner"
        android:padding="@dimen/dis_6" />

</RelativeLayout>